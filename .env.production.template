# Production Environment Configuration
# Enhanced Zero Trust Security Framework

# =============================================================================
# SECURITY KEYS (CHANGE THESE IN PRODUCTION!)
# =============================================================================
SECRET_KEY=change-me-in-production-use-strong-random-key
JWT_SECRET_KEY=change-me-in-production-use-strong-random-key
CSRF_SECRET_KEY=change-me-in-production-use-strong-random-key
ENCRYPTION_KEY=change-me-in-production-use-32-byte-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
FLASK_ENV=production
NODE_ENV=production
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# =============================================================================
# DATABASE AND CACHE CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# CORS AND API CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
API_URL=https://api.your-domain.com
WS_URL=wss://api.your-domain.com

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Firebase credentials are loaded from firebase-credentials.json file
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
CSRF_PROTECTION_ENABLED=true
HTTPS_ONLY=true
SECURE_COOKIES=true

# Rate limiting configuration
RATE_LIMIT_AUTH_REQUESTS=10
RATE_LIMIT_AUTH_WINDOW=60
RATE_LIMIT_API_REQUESTS=1000
RATE_LIMIT_API_WINDOW=3600
RATE_LIMIT_DEFAULT_REQUESTS=200
RATE_LIMIT_DEFAULT_WINDOW=3600

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@your-domain.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# External API keys
EXTERNAL_API_KEY=your-external-api-key

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# =============================================================================
# MONITORING SERVICES (OPTIONAL)
# =============================================================================
# Grafana configuration
GRAFANA_PASSWORD=change-me-in-production

# Prometheus configuration
PROMETHEUS_RETENTION_TIME=200h

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_DATE=2024-12-27

# Container resource limits
BACKEND_MEMORY_LIMIT=1Gi
BACKEND_CPU_LIMIT=1000m
FRONTEND_MEMORY_LIMIT=256Mi
FRONTEND_CPU_LIMIT=500m
REDIS_MEMORY_LIMIT=512Mi
REDIS_CPU_LIMIT=500m

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_DEVICE_FINGERPRINTING=true
FEATURE_VISITOR_MANAGEMENT=true
FEATURE_JIT_ACCESS=true
FEATURE_BREAK_GLASS=true
FEATURE_CONTINUOUS_AUTH=true
FEATURE_ML_POLICY_ENGINE=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_AUDIT_LOGGING=true

# =============================================================================
# COMPLIANCE AND PRIVACY
# =============================================================================
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_POLICY_ENABLED=true
PRIVACY_CONTROLS_ENABLED=true
AUDIT_TRAIL_ENABLED=true

# =============================================================================
# EMERGENCY CONFIGURATION
# =============================================================================
EMERGENCY_MODE=false
EMERGENCY_CONTACT_EMAIL=emergency@your-domain.com
EMERGENCY_PHONE=+1-555-0123

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
PRIMARY_DOMAIN=your-domain.com
API_DOMAIN=api.your-domain.com
ADMIN_EMAIL=admin@your-domain.com
SUPPORT_EMAIL=support@your-domain.com
SECURITY_EMAIL=security@your-domain.com

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de

# =============================================================================
# DEVELOPMENT AND DEBUG (DISABLE IN PRODUCTION)
# =============================================================================
DEBUG=false
TESTING=false
DEVELOPMENT_MODE=false