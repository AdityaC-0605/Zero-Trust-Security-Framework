# Flask Configuration
FLASK_ENV=development
DEBUG=True

# Performance Optimizations for Development
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_DETAILED_LOGGING=false
ENABLE_REDIS_CACHING=true
ENABLE_REDIS_SCALING=false

# Connection Timeouts (faster for development)
REDIS_TIMEOUT=2
CONNECTION_TIMEOUT=2

# Server Configuration
HOST=0.0.0.0
PORT=5001

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# WebSocket Configuration
WEBSOCKET_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Configuration (local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security Keys (development only)
SECRET_KEY=dev_secret_key_fast_startup
JWT_SECRET_KEY=dev_jwt_secret_fast_startup

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Firebase Network Error Bypass (DISABLED - use real Firebase)
BYPASS_FIREBASE_NETWORK_ERRORS=false

# Disable Heavy Services for Development
SENTRY_DSN=
ENABLE_BLOCKCHAIN=false
ENABLE_IPFS=false
ENABLE_ML_SERVICES=false