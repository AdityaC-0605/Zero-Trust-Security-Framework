# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=7
SESSION_INACTIVITY_MINUTES=30

# CORS Configuration (comma-separated, no wildcards allowed)
# Production example: CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:3000

# Server Configuration
PORT=5001
HOST=0.0.0.0

# Email Configuration (for alerts)
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=admin@example.com

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=30
MFA_LOCKOUT_ATTEMPTS=3
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting (enforced by security middleware)
RATE_LIMIT_ACCESS_REQUESTS=100/hour
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_API=1000/hour

# Redis URL for distributed rate limiting (optional, uses in-memory by default)
# REDIS_URL=redis://localhost:6379/0

# Request Size Limits
MAX_CONTENT_LENGTH_MB=1

# TLS/HTTPS Configuration (for production)
# PREFERRED_URL_SCHEME=https
# SESSION_COOKIE_SECURE=true

# Audit Log Configuration
LOG_RETENTION_DAYS=90

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (Message Queue)
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ALLOWED_ORIGINS=http://localhost:3000

# Blockchain Configuration
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_PROVIDER_URL=http://localhost:8545
BLOCKCHAIN_NETWORK_ID=1337
BLOCKCHAIN_CONTRACT_ADDRESS=
BLOCKCHAIN_PRIVATE_KEY=

# IPFS Configuration
IPFS_ENABLED=true
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=1024

# ML Model Configuration
ML_MODELS_PATH=./ml_models
BEHAVIORAL_MODEL_TRAINING_DAYS=14
RISK_SCORE_UPDATE_INTERVAL=30
MODEL_CACHE_TTL=3600

# Behavioral Biometrics Configuration
BEHAVIORAL_TRACKING_ENABLED=true
KEYSTROKE_SAMPLE_RATE=1000
MOUSE_SAMPLE_RATE=60
BEHAVIORAL_BATCH_INTERVAL=30

# Threat Prediction Configuration
THREAT_PREDICTION_ENABLED=true
THREAT_PREDICTION_CONFIDENCE_THRESHOLD=0.70
THREAT_PREDICTION_LOOKBACK_DAYS=30

# Contextual Intelligence Configuration
CONTEXT_EVALUATION_ENABLED=true
DEVICE_HEALTH_WEIGHT=0.25
NETWORK_SECURITY_WEIGHT=0.25
TIME_APPROPRIATENESS_WEIGHT=0.20
LOCATION_RISK_WEIGHT=0.15
HISTORICAL_TRUST_WEIGHT=0.15

# IP Reputation APIs
ABUSEIPDB_API_KEY=
IPQUALITYSCORE_API_KEY=

# GeoIP Configuration
GEOIP2_DATABASE_PATH=./geoip2/GeoLite2-City.mmdb

# Session Management
DYNAMIC_SESSION_DURATION_ENABLED=true
MIN_SESSION_DURATION_MINUTES=15
MAX_SESSION_DURATION_MINUTES=480

# Security Assistant Configuration
SECURITY_ASSISTANT_ENABLED=true
ASSISTANT_RATE_LIMIT=60/hour
ASSISTANT_LANGUAGES=en,es,fr,zh

# Training Simulation Configuration
TRAINING_SIMULATIONS_ENABLED=true
SECURITY_AWARENESS_THRESHOLD=60

# Adaptive Policy Configuration
ADAPTIVE_POLICY_ENABLED=true
POLICY_EFFECTIVENESS_THRESHOLD=70
POLICY_AUTO_ADJUST_ENABLED=true
